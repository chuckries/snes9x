<Page
    x:Class="App2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="itemDataTemplate" x:DataType="local:MenuItem">
          <TextBlock Text="{x:Bind Text}" />
        </DataTemplate>
        
        
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <toolkit:HamburgerMenu Name="hamburgerMenu"
                               ItemClick="hamburgerMenu_ItemClick"
                               OptionsItemClick="hamburgerMenu_ItemClick"
                               ItemTemplate="{StaticResource itemDataTemplate}"
                               OptionsItemTemplate="{StaticResource itemDataTemplate}"
                               DisplayMode="Overlay">
            <toolkit:HamburgerMenu.PaneBackground>
                <SolidColorBrush Color="White" Opacity="0.8" />
            </toolkit:HamburgerMenu.PaneBackground>
            <TextBlock Name="myTextBlock" FontSize="72" FontWeight="ExtraBold"/>
        </toolkit:HamburgerMenu>
    </Grid>
</Page>
